            android:label="@string/title_activity_vmmax"
            android:launchMode="singleTop"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".SetnumActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_setnum"
            android:launchMode="singleTop"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".SetnumlevelActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_setnumlevel"
